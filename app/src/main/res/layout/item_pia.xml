<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/hot_title">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/img_pia"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hot_title"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:text="PIA戏模仿"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="换一批"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/recycle"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/hot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_pia">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_below="@+id/rv_pia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pia"
        android:text="查看更多 >"
        android:textColor="@color/colorPrimary"
        android:gravity="center"

        />
</RelativeLayout>